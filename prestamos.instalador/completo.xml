<assembly
 xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

 <id>lydian</id>
 <formats>
 	<format>jar</format> 
 </formats>
 <includeBaseDirectory>false</includeBaseDirectory> <!-- strip the module prefixes -->
 <dependencySets>
	 <dependencySet>
	 	<unpack>true</unpack> <!-- unpack , then repack the jars -->
 		<useTransitiveDependencies>false</useTransitiveDependencies> <!-- do not pull in any transitive dependencies -->
 	    <unpackOptions>
                <excludes>
                    <exclude>META-INF/maven</exclude>
                    <exclude>META-INF/maven/*</exclude>
                </excludes>
            </unpackOptions>
 	 </dependencySet>
  </dependencySets>
</assembly>
